      "name": "List Users (page=1)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"List users returns data array\", function () {\r",
              "  const json = pm.response.json();\r",
              "  pm.expect(json).to.have.property(\"data\");\r",
              "  pm.expect(json.data).to.be.an(\"array\").that.is.not.empty;\r",
              "});\r",
              "\r",
              "pm.test(\"Each user has id and email\", function () {\r",
              "  const json = pm.response.json();\r",
              "  json.data.forEach(u => {\r",
              "    pm.expect(u).to.have.property(\"id\");\r",
              "    pm.expect(u).to.have.property(\"email\");\r",
              "  });\r",
              "});\r",
              ""
            ],
