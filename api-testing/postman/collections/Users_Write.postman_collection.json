      "name": "Create User",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Create returns id\", function () {\r",
              "  const json = pm.response.json();\r",
              "  pm.expect(json).to.have.property(\"id\");\r",
              "  pm.environment.set(\"createdUserId\", json.id);\r",
              "});\r",
              "\r",
              "pm.test(\"Create echoes name/job\", function () {\r",
              "  const json = pm.response.json();\r",
              "  const sent = pm.request.body ? JSON.parse(pm.request.body.raw) : {};\r",
              "  pm.expect(json.name).to.eql(sent.name);\r",
              "  pm.expect(json.job).to.eql(sent.job);\r",
              "});"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
      ],
      "request": {
        "method": "POST",
